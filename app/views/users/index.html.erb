<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        <h2>User info</h2>
        <table class='table'>
          <tr>
            <%= image_tag 'default-image.jpg' %>  
          </tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>  
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>  
          </tr>
        </table>
        <div class='row'>
          <% if @user.id == current_user.id %>
            <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
              <i class="fas fa-user-cog"></i>
            <% end %>
          <% end %>
        </div>
        <h2 class="mt-3">New Post</h2>
          <h4>
            <%= link_to "Players Post", new_player_path %>
          </h4>
          <h4>
            <%= link_to "Teams Post", new_team_path %>
          </h4>
        <div>
          <h2>Players Search</h2>
          <%= search_form_for @search, url: players_path do |f| %>
            <%= f.label :title_cont, "Player Name" %>
            <%= f.search_field :title_cont %>
            <div class="actions"><%= f.submit "Search" %></div>
          <% end %>
          <h2>Teams Search</h2>
          <%= search_form_for @search, url: teams_path do |f| %>
            <%= f.label :title_cont, "Team Name" %>
            <%= f.search_field :title_cont %>
            <div class="actions"><%= f.submit "Search" %></div>
          <% end %>
        </div>
      </div>
      <div class='col-md-8 offset-md-1'>
        <h2>Users</h2>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "default-image.jpg", size: "80x80" %></td>
                <td><%= user.name %></td>
                <td><%= link_to 'Show', user_path(user.id) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>

