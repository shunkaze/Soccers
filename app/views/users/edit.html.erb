<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  <h2>ユーザー情報</h2>
  <% if @user.errors.any? %>
    <%= @user.errors.count %> error prohibited this obj from being saved:
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  <% end %>
  
  <%= form_with model:@user, local:true do |f| %>
    <%= flash[:notice] %>
    <h4>名前</h4>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
    <h4>画像</h4>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
    <h4>紹介</h4>
    <%= f.text_area :introduction %>
    <div><%= f.submit "Update User" %></div>
  <% end %>
</div>

