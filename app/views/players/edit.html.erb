<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  <h2>Player編集</h2>
  <% if @player.errors.any? %>
    <%= @player.errors.count %> errors prohibited this obj from being saved:
    <ul>
    <% @player.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  <% end %>
  <%= form_with model:@player, url: player_path, local:true do |f| %>
    <%= flash[:notice] %>
    <h5 class="font-weight-light">Name</h5>
    <%= f.text_field :title, autofocus: true %>
    <h5 class="font-weight-light">Opinion</h5>
    <%= f.text_area :body %>
    <div><%= f.submit "Update Player" %></div>
    <div>
    <%= link_to "Show", player_path(@player.id) %>
    |
    <%= link_to "Back", players_path %>
    </div>
  <% end %>
</div>
