<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        <h2>User info</h2>
        <table class='table'>
          <tr>
            <%= image_tag 'default-image.jpg' %>  
          </tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>  
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>  
          </tr>
        </table>ã€€ 
        <div class='row'>
          <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>
        <h2 class="mt-3">New Post</h2>
          <h4>
            <%= link_to "Players Post", new_player_path %>
          </h4>
          <h4>
            <%= link_to "Teams Post", new_team_path %>
          </h4>
        <div>
          <h2>Players Search</h2>
          <%= search_form_for @search, url: players_path do |f| %>
            <%= f.label :title_cont, "Player Name" %>
            <%= f.search_field :title_cont %>
            <div class="actions"><%= f.submit "Search" %></div>
          <% end %>
          <h2>Teams Search</h2>
          <%= search_form_for @search, url: teams_path do |f| %>
            <%= f.label :title_cont, "Team Name" %>
            <%= f.search_field :title_cont %>
            <div class="actions"><%= f.submit "Search" %></div>
          <% end %>
        </div>
      </div>
      <div class='col-md-8 offset-md-1'>
        <h2>Player detail</h2>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th></th>
              <th>Name</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <%= attachment_image_tag @player.user, :profile_image, format: 'jpeg', fallback: "default-image.jpg", size: "80x80" %>
                <p>
                  <%= link_to user_path(@player.user.id) do %>
                    <%= @player.user.name %>
                  <% end %>
                </p>
              </td>
              <td>
                <%= link_to player_path(@player.id) do %>
                  <%= @player.title %>
                <% end %>
              </td>
              <td><%= @player.body %></td>
              <% if @user.id == current_user.id %>
                <td><%= link_to "Edit", edit_player_path(@player.id), class:"btn btn-sm btn-success" %></td>
                <td><%= link_to "Destroy", player_path(@player.id), method: :delete, class:"btn btn-sm btn-danger" %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
